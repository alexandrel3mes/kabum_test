{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,                     
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./src/app/config/@types",
      "./custom_typings",
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests"]
}